<resources>
    <declare-styleable name="com_playhaven_android_view_PlayHavenView">
        <!-- The placement tag as defined in the Dashboard -->
        <attr name="placementTag" format="string"/>

        <!--
        Show something immediately. ORable options.
        -->
        <attr name="cuDisplayOptions">
            <!-- Show an overlay over the content -->
            <flag name="auto" value="0x00"/>

            <!-- Show an overlay over the content -->
            <flag name="none" value="0x01"/>

            <!-- Show an overlay over the content -->
            <flag name="overlay" value="0x02"/>

            <!-- Show a loading animation -->
            <flag name="animation" value="0x04"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="com_playhaven_android_view_Badge">
        <!-- The placement tag as defined in the Dashboard -->
        <attr name="placementTag"/>

        <!-- Numeric text color -->
        <attr name="badgeTextColor" format="color"/>
    </declare-styleable>
</resources>